{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineEnding": "lf",
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"indentStyle": "tab"
		}
	},
	"files": {
		"ignore": ["app.json"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUndeclaredVariables": "error",
				"noUnusedImports": "warn",
				"noUnusedVariables": "warn"
			},
			"complexity": {
				"noForEach": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"style": {
				"noShoutyConstants": "warn",
				"noUselessElse": "off",
				"useBlockStatements": "error",
				"useShorthandArrayType": "error",
				"useTemplate": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noExplicitAny": "info"
			},
			"a11y": {
				"useKeyWithClickEvents": "off"
			}
		}
	}
}
